<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:orientation="horizontal"
    tools:context=".UI.category.CreateNewCategoryActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/txtNameNewCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:autofillHints="@string/hint_field_name_category"
            android:background="@drawable/custom_edit_text"
            android:ems="10"
            android:hint="@string/hint_field_name_category"
            android:inputType="textPersonName"
            android:textSize="@dimen/size_font_smartphone"
            app:layout_constraintEnd_toStartOf="@+id/guideline76"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/guideline75"
            app:layout_constraintTop_toBottomOf="@+id/txtLabelNameCategory" />

        <EditText
            android:id="@+id/txtDescriptionNewCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:autofillHints="@string/hint_field_description_category"
            android:background="@drawable/custom_edit_text"
            android:ems="10"
            android:gravity="start|top"
            android:hint="@string/hint_field_description_category"
            android:inputType="textMultiLine"
            android:maxLines="4"
            android:scrollbars="vertical"
            android:textSize="@dimen/size_font_smartphone"
            app:layout_constraintEnd_toStartOf="@+id/guideline76"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline75"
            app:layout_constraintTop_toBottomOf="@+id/txtLabelDescriptionCategory" />

        <Button
            android:id="@+id/btnNewCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@drawable/custom_btn"
            android:text="@string/text_button_create_new_category"
            android:textAlignment="center"
            android:textColor="@color/colorLetter"
            android:textSize="@dimen/size_font_smartphone"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline78"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline77"
            app:layout_constraintTop_toBottomOf="@+id/txtDescriptionNewCategory"
            app:layout_constraintVertical_bias="0.274" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline75"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="98dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline76"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="98dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline77"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="149dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline78"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="149dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline80"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="440dp" />

        <TextView
            android:id="@+id/txtLabelNameCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/label_name_category"
            android:textAlignment="textStart"
            android:textColor="@color/colorLetter"
            android:textSize="@dimen/size_font_smartphone"
            app:layout_constraintEnd_toStartOf="@+id/guideline76"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline75"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtLabelDescriptionCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="@string/label_description_category"
            android:textAlignment="textStart"
            android:textColor="@color/colorLetter"
            android:textSize="@dimen/size_font_smartphone"
            app:layout_constraintEnd_toStartOf="@+id/guideline76"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline75"
            app:layout_constraintTop_toBottomOf="@+id/txtNameNewCategory" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>