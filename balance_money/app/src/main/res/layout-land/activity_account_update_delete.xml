<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="horizontal"
    tools:context=".UI.account.AccountUpdateDeleteActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp">

        <TextView
            android:id="@+id/txtlabelNameAccount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="20dp"
            android:text="@string/label_cuenta"
            android:textAlignment="textStart"
            android:textColor="@color/colorLetter"
            android:textSize="@dimen/size_font_smartphone"
            app:layout_constraintEnd_toStartOf="@+id/guideline20"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txtTitleAccount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:autofillHints="@string/field_name_create_account"
            android:background="@drawable/custom_edit_text"
            android:ems="10"
            android:textSize="@dimen/size_font_smartphone"
            android:hint="@string/field_name_create_account"
            android:inputType="textPersonName"

            app:layout_constraintEnd_toStartOf="@+id/guideline20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtlabelNameAccount" />

        <TextView
            android:id="@+id/textSelectMoney"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/field_select_money_create_account"
            android:textAlignment="textStart"
            android:textColor="@color/colorLetter"
            android:textSize="@dimen/size_font_smartphone"
            app:layout_constraintEnd_toStartOf="@+id/guideline20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTitleAccount" />

        <Button
            android:id="@+id/btnDollar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custom_shape_account"
            android:drawableStart="@drawable/dollar"
            android:paddingStart="10dp"
            android:drawablePadding="5dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/btn_money_dollar"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/colorLetter"
            android:textSize="@dimen/size_font_smartphone"
            app:layout_constraintEnd_toStartOf="@+id/guideline20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnColon" />

        <Button
            android:id="@+id/btnEuro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custom_shape_account"
            android:drawableStart="@drawable/euro"
            android:paddingStart="10dp"
            android:drawablePadding="5dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/btn_money_euro"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/colorLetter"
            android:textSize="@dimen/size_font_smartphone"
            app:layout_constraintEnd_toStartOf="@+id/guideline20"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnDollar" />

        <Button
            android:id="@+id/btnColon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custom_shape_account"
            android:drawableStart="@drawable/colon"
            android:paddingStart="10dp"
            android:drawablePadding="5dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/btn_money_colon"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/colorLetter"
            android:textSize="@dimen/size_font_smartphone"
            app:layout_constraintEnd_toStartOf="@+id/guideline20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textSelectMoney" />

        <TextView
            android:id="@+id/txtLabelAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="20dp"
            android:text="@string/label_amount_account"
            android:textAlignment="textStart"
            android:textColor="@color/colorLetter"
            android:textSize="@dimen/size_font_smartphone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline20"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txtAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custom_edit_text"
            android:ems="10"
            android:hint="@string/field_amount_create_account"
            android:inputType="number"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/size_font_smartphone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline20"
            app:layout_constraintTop_toBottomOf="@+id/txtLabelAmount"
            android:autofillHints="@string/field_amount_create_account" />

        <TextView
            android:id="@+id/txtLabelDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/label_description_account"
            android:textAlignment="textStart"
            android:textColor="@color/colorLetter"
            android:textSize="@dimen/size_font_smartphone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline20"
            app:layout_constraintTop_toBottomOf="@+id/txtAmount" />

        <EditText
            android:id="@+id/txtDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custom_edit_text"
            android:ems="10"
            android:textSize="@dimen/size_font_smartphone"
            android:gravity="start|top"
            android:hint="@string/field_description_create_account"
            android:inputType="textMultiLine"
            android:maxLines="4"
            android:scrollbars="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/guideline20"
            app:layout_constraintTop_toBottomOf="@+id/txtLabelDescription"
            android:autofillHints="@string/field_description_create_account" />

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/custom_btn"
            android:text="@string/name_btn_update_account"
            android:textAlignment="center"
            android:textColor="@color/colorLetter"
            android:textSize="@dimen/size_font_smartphone"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline20"
            app:layout_constraintTop_toBottomOf="@+id/txtDescription" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>