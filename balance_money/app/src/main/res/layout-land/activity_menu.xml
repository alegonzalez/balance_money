<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".UI.menu.MenuActivity">


    <Button
        android:id="@+id/btnAccount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/custom_shape_account"
        android:drawableStart="@drawable/budget"
        android:paddingStart="76dp"
        android:paddingTop="6dp"
        android:paddingEnd="1dp"
        android:paddingBottom="6dp"
        android:text="@string/btn_account"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/colorLetter"
        android:textSize="19sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline11"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline8"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/custom_shape_category"
        android:drawableStart="@drawable/categorie"
        android:paddingStart="76dp"
        android:paddingTop="6dp"
        android:paddingEnd="1dp"
        android:paddingBottom="6dp"
        android:text="@string/btn_categories"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/colorLetter"
        android:textSize="19sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline10"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline11"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnTransaction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/custom_shape_transaction"
        android:drawableStart="@drawable/transaction"
        android:paddingStart="76dp"
        android:paddingTop="6dp"
        android:paddingEnd="1dp"
        android:paddingBottom="6dp"
        android:text="@string/btn_transactions"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/colorLetter"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline11"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline8"
        app:layout_constraintTop_toBottomOf="@+id/btnAccount"
        app:layout_constraintVertical_bias="0.232" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="43dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="43dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.48" />

    <Button
        android:id="@+id/btnStadistic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/custom_shape_stadistic"
        android:drawableStart="@drawable/stadistics"
        android:paddingStart="76dp"
        android:paddingTop="6dp"
        android:paddingEnd="1dp"
        android:paddingBottom="6dp"
        android:text="@string/btn_stadistics"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/colorLetter"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline10"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline11"
        app:layout_constraintTop_toBottomOf="@+id/btnCategory"
        app:layout_constraintVertical_bias="0.232" />

</androidx.constraintlayout.widget.ConstraintLayout>