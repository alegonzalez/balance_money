<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp">


        <TextView
            android:id="@+id/txtLabelAccount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="88dp"
            android:layout_marginEnd="20dp"
            android:text="@string/label_cuenta"
            android:textAlignment="textStart"
            android:textColor="@color/colorLetter"
            android:textSize="@dimen/size_font_tablet"
            app:layout_constraintEnd_toStartOf="@+id/guideline40"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/guideline35"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txtTitleAccount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:autofillHints="field_name_create_account"
            android:background="@drawable/custom_edit_text"
            android:ems="10"
            android:hint="@string/field_name_create_account"
            android:inputType="textPersonName"
            android:textSize="@dimen/size_font_tablet"
            app:layout_constraintEnd_toStartOf="@+id/guideline40"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline35"
            app:layout_constraintTop_toBottomOf="@+id/txtLabelAccount" />

        <TextView
            android:id="@+id/textSelectMoney"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:text="@string/field_select_money_create_account"
            android:textAlignment="textStart"
            android:textColor="@color/colorLetter"
            android:textSize="@dimen/size_font_tablet"
            app:layout_constraintEnd_toStartOf="@+id/guideline40"
            app:layout_constraintStart_toStartOf="@+id/guideline35"
            app:layout_constraintTop_toBottomOf="@+id/txtTitleAccount" />

        <Button
            android:id="@+id/btnColon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:background="@drawable/custom_shape_account"
            android:drawableStart="@drawable/colon_tablet"
            android:paddingStart="10dp"
            android:drawablePadding="5dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/btn_money_colon"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/colorLetter"
            android:textSize="@dimen/size_font_tablet"
            app:layout_constraintEnd_toStartOf="@+id/guideline40"
            app:layout_constraintStart_toStartOf="@+id/guideline35"
            app:layout_constraintTop_toBottomOf="@+id/textSelectMoney" />

        <Button
            android:id="@+id/btnDollar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_shape_account"
            android:drawableStart="@drawable/dollar_tablet"
            android:paddingStart="10dp"
            android:drawablePadding="5dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/btn_money_dollar"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/colorLetter"
            android:textSize="@dimen/size_font_tablet"
            app:layout_constraintEnd_toStartOf="@+id/guideline40"
            app:layout_constraintStart_toStartOf="@+id/guideline35"
            app:layout_constraintTop_toBottomOf="@+id/btnColon" />

        <Button
            android:id="@+id/btnEuro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_shape_account"
            android:drawableStart="@drawable/euro_tablet"
            android:paddingStart="10dp"
            android:drawablePadding="5dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/btn_money_euro"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/colorLetter"
            android:textSize="@dimen/size_font_tablet"
            app:layout_constraintEnd_toStartOf="@+id/guideline40"
            app:layout_constraintStart_toStartOf="@+id/guideline35"
            app:layout_constraintTop_toBottomOf="@+id/btnDollar" />

        <EditText
            android:id="@+id/txtAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="1dp"
            android:autofillHints="@string/field_amount_create_account"
            android:background="@drawable/custom_edit_text"
            android:ems="10"
            android:hint="@string/field_amount_create_account"
            android:inputType="number"
            android:textSize="@dimen/size_font_tablet"
            app:layout_constraintEnd_toStartOf="@+id/guideline41"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline40"
            app:layout_constraintTop_toBottomOf="@+id/txtLabelAmount" />

        <EditText
            android:id="@+id/txtDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="@drawable/custom_edit_text"
            android:ems="10"
            android:gravity="start|top"
            android:hint="@string/field_description_create_account"
            android:inputType="textMultiLine"
            android:maxLines="4"
            android:scrollbars="vertical"
            android:textSize="@dimen/size_font_tablet"
            app:layout_constraintEnd_toStartOf="@+id/guideline41"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline40"
            app:layout_constraintTop_toBottomOf="@+id/txtLabelDescription"
            android:autofillHints="@string/field_description_create_account" />

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="58dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/custom_btn"
            android:text="@string/name_btn_update_account"
            android:textAlignment="center"
            android:textColor="@color/colorLetter"
            android:textSize="@dimen/size_font_tablet"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline41"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/guideline40"
            app:layout_constraintTop_toBottomOf="@+id/txtDescription"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="81dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:id="@+id/txtLabelAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="88dp"
            android:text="@string/label_amount_account"
            android:textAlignment="textStart"
            android:textColor="@color/colorLetter"
            android:textSize="@dimen/size_font_tablet"
            app:layout_constraintEnd_toStartOf="@+id/guideline41"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline40"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtLabelDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="52dp"
            android:text="@string/label_description_account"
            android:textAlignment="textStart"
            android:textColor="@color/colorLetter"
            android:textSize="@dimen/size_font_tablet"
            app:layout_constraintEnd_toStartOf="@+id/guideline41"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/guideline40"
            app:layout_constraintTop_toBottomOf="@+id/txtAmount" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="81dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>