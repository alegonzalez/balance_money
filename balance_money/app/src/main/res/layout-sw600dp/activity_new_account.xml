<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context=".UI.account.NewAccountActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp">

        <EditText
            android:id="@+id/txtTitleAccount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edit_text"
            android:ems="10"
            android:hint="@string/field_name_create_account"
            android:inputType="textPersonName"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline34"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline9"
            app:layout_constraintTop_toBottomOf="@+id/txtLabelAccount"
            android:autofillHints="field_name_create_account" />

        <Button
            android:id="@+id/btnColon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/custom_shape_account"
            android:drawableStart="@drawable/colon_tablet"
            android:drawablePadding="5dp"
            android:paddingStart="170dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingEnd="1dp"
            android:text="@string/btn_money_colon"
            android:textAlignment="textStart"
            android:textColor="@color/colorLetter"
            android:textSize="25sp"
            android:textAllCaps="false"
            app:layout_constraintEnd_toStartOf="@+id/guideline34"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline9"
            app:layout_constraintTop_toBottomOf="@+id/textSelectMoney" />

        <Button
            android:id="@+id/btnDollar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/custom_shape_account"
            android:drawableStart="@drawable/dollar_tablet"
            android:drawablePadding="5dp"
            android:paddingStart="170dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingEnd="1dp"
            android:textSize="25sp"
            android:textAllCaps="false"
            android:text="@string/btn_money_dollar"
            android:textAlignment="textStart"
            android:textColor="@color/colorLetter"
            app:layout_constraintEnd_toStartOf="@+id/guideline34"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline9"
            app:layout_constraintTop_toBottomOf="@+id/btnColon" />

        <Button
            android:id="@+id/btnEuro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/custom_shape_account"
            android:drawableStart="@drawable/euro_tablet"
            android:drawablePadding="5dp"
            android:paddingStart="170dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingEnd="1dp"
            android:textSize="25sp"
            android:textAllCaps="false"
            android:text="@string/btn_money_euro"
            android:textAlignment="textStart"
            android:textColor="@color/colorLetter"
            app:layout_constraintEnd_toStartOf="@+id/guideline34"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline9"
            app:layout_constraintTop_toBottomOf="@+id/btnDollar" />

        <TextView
            android:id="@+id/txtLabelAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:text="@string/label_amount_account"
            android:textAlignment="textStart"
            android:textColor="@color/colorLetter"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline34"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline9"
            app:layout_constraintTop_toBottomOf="@+id/btnEuro" />

        <EditText
            android:id="@+id/txtAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/custom_edit_text"
            android:ems="10"
            android:hint="@string/field_amount_create_account"
            android:inputType="number"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline34"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/guideline9"
            app:layout_constraintTop_toBottomOf="@+id/txtLabelAmount" />

        <TextView
            android:id="@+id/txtLabelDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/label_description_account"
            android:textAlignment="textStart"
            android:textColor="@color/colorLetter"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline34"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline9"
            app:layout_constraintTop_toBottomOf="@+id/txtAmount" />

        <EditText
            android:id="@+id/txtDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edit_text"
            android:ems="10"
            android:gravity="start|top"
            android:hint="@string/field_description_create_account"
            android:inputType="textMultiLine"
            android:maxLines="4"
            android:scrollbars="vertical"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline34"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline9"
            app:layout_constraintTop_toBottomOf="@+id/txtLabelDescription" />

        <Button
            android:id="@+id/btnNewAccount"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginTop="104dp"
            android:background="@drawable/custom_btn"
            android:drawableStart="@drawable/icon_add_tablet"
            android:paddingStart="230dp"
            android:paddingEnd="1dp"
            android:text="@string/button__create_account"
            android:textAlignment="textStart"
            android:textColor="@color/colorLetter"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline34"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline9"
            app:layout_constraintTop_toBottomOf="@+id/txtDescription" />

        <TextView
            android:id="@+id/textSelectMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:text="@string/field_select_money_create_account"
            android:textAlignment="textStart"
            android:textColor="@color/colorLetter"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline34"
            app:layout_constraintStart_toStartOf="@+id/guideline9"
            app:layout_constraintTop_toBottomOf="@+id/txtTitleAccount" />

        <TextView
            android:id="@+id/txtLabelAccount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="116dp"
            android:text="@string/label_cuenta"
            android:textAlignment="textStart"
            android:textColor="@color/colorLetter"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline34"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline9"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="156dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="156dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>